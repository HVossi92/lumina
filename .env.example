# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=your_secret_key_base_here

# Database path (for production)
DATABASE_PATH=/app/data/lumina.db

# Your domain
PHX_HOST=lumina.yourdomain.com

# Token signing secret (generate with: mix phx.gen.secret)
TOKEN_SIGNING_SECRET=your_token_signing_secret_here

# Port (default: 4000)
PORT=4000

# Pool size (default: 5)
POOL_SIZE=5

# Optional: Google OAuth for "Sign in with Google". Get credentials from Google Cloud Console.
GOOGLE_OAUTH_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your-client-secret
#GOOGLE_OAUTH_REDIRECT_URI is optional; default is https://PHX_HOST/auth/user/google/callback

LUMINA_ADMIN_EMAIL=admin@example.com
LUMINA_ADMIN_PASSWORD=change-me-in-production